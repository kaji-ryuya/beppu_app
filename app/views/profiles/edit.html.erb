<% content_for(:title, 'プロフィール編集') %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1>プロフィール変更</h1>
      <%= form_with model: @user, url: profile_path, local: true, data: { turbo: false } do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control mb-3' %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control mb-3' %>

        <%= f.submit '変更する', class: 'btn btn-primary mt-3 mb-3' %>
      <% end %>
    </div>
  </div>
</div>