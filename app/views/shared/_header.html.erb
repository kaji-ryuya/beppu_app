<header>
  <div class='header'>
    <div class='container'>
    <nav class='navbar navbar-expand-lg navigation navbar-dark'>
      <%= link_to root_path, class: "navbar-brand" do %>
        <h2>気分で決める別府温泉</h2>
      <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class='navbar-toggler-icon'></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class='navbar-nav ml-auto main-nav align-items-center me-4'>
          <li class='nav-item'>
            <%= link_to '質問から探す', question_path, class: 'nav-link' %>
          </li>
          <li class='nav-item'>
            <%= link_to 'リストから探す', spas_path, class: 'nav-link' %>
          </li>
          <li class='nav-item'>
            <%= link_to 'マップから探す', map_path, class: 'nav-link' %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= current_user.name %>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
              <% if logged_in? %>
                <li><%= link_to 'お気に入り一覧', bookmarks_spas_path, class: 'dropdown-item' %></li>
              <% end %>
              <li><%= link_to 'プロフィール編集', edit_profile_path, class: 'dropdown-item' %></li>
              <li><%= link_to 'ログアウト', logout_path, class: 'dropdown-item' %></li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
    </div>
  </div>
</header>