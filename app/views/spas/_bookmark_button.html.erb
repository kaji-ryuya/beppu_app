<turbo-frame id="bookmark-button-<%= spa.id %>">
  <% if current_user.bookmark?(spa) %>
    <%= button_to 'お気に入り解除', bookmark_path(spa), class: 'btn btn-bookmark ms-2', method: :delete, remote: true %>
  <% else %>
    <%= button_to 'お気に入り追加', bookmarks_path(spa_id: spa.id), class: 'btn btn-primary ms-2', method: :post, remote: true %>
  <% end %>
</turbo-frame>